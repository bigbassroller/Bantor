<!DOCTYPE html>
<html ng-app='app'>
  <head>
    <link rel='stylesheet' href='/app.css'>
  </head>
  <body>
  <header class="site-header">
    <div class="container">
       <h1>Recent Posts</h1>
    </div>
  </header>
  <main id="main" class="site-main" role="main">
    <div ng-controller='PostsCtrl' class='container'>
      <div class='list-group'>
        <article class="article post type-post hentry">
          <form role='form'>
            <div class='form-group'>
              <div class="input-group">
              <header class="entry-header">
                 <input ng-model="postEntry_Title" class='form-control h3 full-width dotted-underline' placeholder="Entry Title">
              </header>
              <div class="entry-content">
                <textarea ng-model="postBody" class="form-control dotted-underline" placeholder="Entry Content"></textarea> 
              </div>
              <footer class='input-group-btn entry-footer'>
                <button ng-click='addPost()' class='btn btn-default'>Add Post</button>
              </footer>
              </div>
            </div>
          </form>
        </article>
        <article class="article post type-post hentry" ng-repeat="post in posts | orderBy:'-date'" class='list-group-item'>
          <header class="entry-header">
            <h3 class="entry-title">{{ post.entry_title }}</h3>
            <p>By {{ post.username }}</p>
          </header>
          <div class="entry-content">{{ post.body }}</div>
        </article>
      </div>
    </div><!-- PostCtrl -->
  </main>
  <footer id="colophon" class="site-footer" role="contentinfo">
    <div class="container">
      <div class="site-info">
        <a href="http://space-rocket.com/">Proudly powered by Space-Rocket CMS</a>
      </div>
    </div>
  </footer>
    <script src='http://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular.js'></script>
    <script src='/app.js'></script>
  </body>
</html>
