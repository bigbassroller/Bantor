<!DOCTYPE html>
<html ng-app='app'>
  <head>
    <link rel='stylesheet' href='/app.css'>
  </head>
  <body>
  <main id="main" class="site-main" role="main">
    <div ng-controller='PostsCtrl' class='container'>
      <h1>Recent Posts</h1>
      <div class='list-group'>
        <form class='article post type-post hentry form-group' role='form'>
            <header class="entry-header">
              <input class="entry-title" ng-model="postEntry_Title" class='form-control'>
            </header>
            <textarea class="entry-content" ng-model="postBody" class='form-control'></textarea> 
            <span class='input-group-btn'>
              <button ng-click='addPost()' class='btn btn-default'>Add Post</button>
            </span>
        </form>
        <article class="article post type-post hentry" ng-repeat="post in posts | orderBy:'-date'" class='list-group-item'>
          <header class="entry-header">
            <h3 class="entry-title">{{ post.entry_title }}</h3>
            <p>By {{ post.username }}</p>
          </header>
          <div class="entry-content">{{ post.body }}</div>
        </article>
      </div>
    </div>
  </main>
    <script src='http://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular.js'></script>
    <script src='/app.js'></script>
  </body>
</html>
